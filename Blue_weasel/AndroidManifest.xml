<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bweasel.blue_weasel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.bweasel.blue_weasel.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.bweasel.blue_weasel.DisplayMessageActivity"
            android:label="@string/title_activity_connected"
            android:parentActivityName="com.bweasel.blue_weasel.HomeActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bweasel.blue_weasel.HomeActivity" />
        </activity>
        <activity
            android:name="com.bweasel.blue_weasel.SplashScreenActivity"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bweasel.blue_weasel.ExitActivity"
            android:label="@string/title_activity_exit"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.bweasel.blue_weasel.CreateAccountActivity"
            android:label="@string/title_activity_create_account" >
        </activity>
    </application>

</manifest>